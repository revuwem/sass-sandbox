{
    "parserOptions": {
        "ecmaVersion": 2017
    },

    "env": {
        "es6": true
    },

    "overrides": [
      {
        "files": [ "src/**/*.js" ],       
        "rules": {
          "indent": [
            "error",
            4
          ],
          "semi": [
            "error",
            "always"
          ],
          "quotes": [
            "error",
            "backtick"
          ]
        }
      }
    ]
  }